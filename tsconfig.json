{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonJS",
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["dist", "node_modules"]
}
